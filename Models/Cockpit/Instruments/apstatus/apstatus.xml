<?xml version="1.0" encoding="UTF-8" ?>

<!-- KC-137R APStatus -->

<PropertyList>

	<path>apstatus.ac</path>
	
	<!-- Power on/off -->
	<animation>
		<name>Power on/off</name>
		<type>select</type>
		<object-name>Off</object-name>
		<condition>
			<less-than>
				<property>systems/electrical/outputs/efis</property>
				<value>15</value>
			</less-than>
		</condition>
	</animation>

    <text>
        <name>THRUST</name>
        <offsets>
            <x-m>0.001</x-m>
            <y-m>-0.042</y-m>
            <z-m>0.0035</z-m>
		</offsets>
		<alignment>center-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type type="string">text-value</type>
		<format type="string">THRUST</format>
		<property>autopilot/serviceable</property>
        <font>helvetica_bold.txf</font>
        <character-size>0.007</character-size>
        <character-aspect-ratio type="double">1.4</character-aspect-ratio>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
	</text>
    <text>
        <name>TPITCH</name>
        <offsets>
            <x-m>0.001</x-m>
            <y-m>-0.042</y-m>
            <z-m>0.0035</z-m>
		</offsets>
		<alignment>center-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type type="string">text-value</type>
		<format type="string">PITCH</format>
		<property>autopilot/serviceable</property>
        <font>helvetica_bold.txf</font>
        <character-size>0.007</character-size>
        <character-aspect-ratio type="double">1.4</character-aspect-ratio>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
	</text>
    <text>
        <name>RETARD</name>
        <offsets>
            <x-m>0.001</x-m>
            <y-m>-0.042</y-m>
            <z-m>0.0035</z-m>
		</offsets>
		<alignment>center-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type type="string">text-value</type>
		<format type="string">RETARD</format>
		<property>autopilot/serviceable</property>
        <font>helvetica_bold.txf</font>
        <character-size>0.007</character-size>
        <character-aspect-ratio type="double">1.4</character-aspect-ratio>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
	</text>
	
	<animation>
		<type>select</type>
		<object-name>THRUST</object-name>
		<condition>
			<equals>
				<property>it-autoflight/mode/thr</property>
				<value>THRUST</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>TPITCH</object-name>
		<condition>
			<equals>
				<property>it-autoflight/mode/thr</property>
				<value>PITCH</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>RETARD</object-name>
		<condition>
			<equals>
				<property>it-autoflight/mode/thr</property>
				<value>RETARD</value>
			</equals>
		</condition>
	</animation>
	
    <text>
        <name>AP</name>
        <offsets>
            <x-m>0.001</x-m>
            <y-m>-0.015</y-m>
            <z-m>0.0035</z-m>
		</offsets>
		<alignment>center-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type type="string">text-value</type>
		<format type="string">%s</format>
		<property>fma/apstatus/autoflight-mode</property>
        <font>helvetica_bold.txf</font>
        <character-size>0.007</character-size>
        <character-aspect-ratio type="double">1.4</character-aspect-ratio>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
	</text>
	
    <text>
        <name>AT</name>
        <offsets>
            <x-m>0.001</x-m>
            <y-m>-0.015</y-m>
            <z-m>-0.0035</z-m>
		</offsets>
		<alignment>center-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type type="string">text-value</type>
		<format type="string">A/T</format>
		<property>autopilot/serviceable</property>
        <font>helvetica_bold.txf</font>
        <character-size>0.007</character-size>
        <character-aspect-ratio type="double">1.4</character-aspect-ratio>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
	</text>
	
	<animation>
		<type>select</type>
		<object-name>AT</object-name>
		<condition>
			<equals>
				<property>it-autoflight/output/athr</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>
	
    <text>
        <name>ROLL</name>
        <offsets>
            <x-m>0.001</x-m>
            <y-m>0.01</y-m>
            <z-m>0.0035</z-m>
		</offsets>
		<alignment>center-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
        <type type="string">text-value</type>
        <format type="string">%s</format>
		<property>it-autoflight/mode/lat</property>
        <font>helvetica_bold.txf</font>
        <character-size>0.007</character-size>
        <character-aspect-ratio type="double">1.4</character-aspect-ratio>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
	</text>

	<text>
        <name>PITCH</name>
        <offsets>
            <x-m>0.001</x-m>
            <y-m>0.04</y-m>
            <z-m>0.0035</z-m>
		</offsets>
		<alignment>center-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
        <type type="string">text-value</type>
        <format type="string">%s</format>
		<property>it-autoflight/mode/vert</property>
        <font>helvetica_bold.txf</font>
        <character-size>0.007</character-size>
        <character-aspect-ratio type="double">1.4</character-aspect-ratio>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
	</text>
	
    <text>
        <name>THR arm</name>
        <offsets>
            <x-m>0.001</x-m>
            <y-m>-0.042</y-m>
            <z-m>-0.0035</z-m>
		</offsets>
		<alignment>center-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type type="string">text-value</type>
		<format type="string">THRUST</format>
		<property>autopilot/serviceable</property>
        <font>helvetica_bold.txf</font>
        <character-size>0.006</character-size>
        <character-aspect-ratio type="double">1.4</character-aspect-ratio>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
	</text>
	
    <text>
        <name>LOC arm</name>
        <offsets>
            <x-m>0.001</x-m>
            <y-m>0.01</y-m>
            <z-m>-0.0035</z-m>
		</offsets>
		<alignment>center-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type type="string">text-value</type>
		<format type="string">VOR/LOC</format>
		<property>autopilot/serviceable</property>
        <font>helvetica_bold.txf</font>
        <character-size>0.006</character-size>
        <character-aspect-ratio type="double">1.4</character-aspect-ratio>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
	</text>
	
    <text>
        <name>G/S arm</name>
        <offsets>
            <x-m>0.001</x-m>
            <y-m>0.04</y-m>
            <z-m>-0.0035</z-m>
		</offsets>
		<alignment>center-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type type="string">text-value</type>
		<format type="string">G/S</format>
		<property>autopilot/serviceable</property>
        <font>helvetica_bold.txf</font>
        <character-size>0.006</character-size>
        <character-aspect-ratio type="double">1.4</character-aspect-ratio>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
	</text>
    <text>
        <name>ALT arm</name>
        <offsets>
            <x-m>0.001</x-m>
            <y-m>0.04</y-m>
            <z-m>-0.0035</z-m>
		</offsets>
		<alignment>center-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type type="string">text-value</type>
		<format type="string">ALT CAP</format>
		<property>autopilot/serviceable</property>
        <font>helvetica_bold.txf</font>
        <character-size>0.006</character-size>
        <character-aspect-ratio type="double">1.4</character-aspect-ratio>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
	</text>
	
    <text>
        <name>TLATH arm</name>
        <offsets>
            <x-m>0.001</x-m>
            <y-m>0.01</y-m>
            <z-m>-0.0035</z-m>
		</offsets>
		<alignment>center-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type type="string">text-value</type>
		<format type="string">HDG</format>
		<property>autopilot/serviceable</property>
        <font>helvetica_bold.txf</font>
        <character-size>0.006</character-size>
        <character-aspect-ratio type="double">1.4</character-aspect-ratio>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
	</text>
    <text>
        <name>TLATL arm</name>
        <offsets>
            <x-m>0.001</x-m>
            <y-m>0.01</y-m>
            <z-m>-0.0035</z-m>
		</offsets>
		<alignment>center-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type type="string">text-value</type>
		<format type="string">LNAV</format>
		<property>autopilot/serviceable</property>
        <font>helvetica_bold.txf</font>
        <character-size>0.006</character-size>
        <character-aspect-ratio type="double">1.4</character-aspect-ratio>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
	</text>
	
    <text>
        <name>FLARE arm</name>
        <offsets>
            <x-m>0.001</x-m>
            <y-m>0.04</y-m>
            <z-m>-0.0035</z-m>
		</offsets>
		<alignment>center-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type type="string">text-value</type>
		<format type="string">FLARE</format>
		<property>autopilot/serviceable</property>
        <font>helvetica_bold.txf</font>
        <character-size>0.006</character-size>
        <character-aspect-ratio type="double">1.4</character-aspect-ratio>
        <font-resolution>
            <width type="int">64</width>
            <height type="int">64</height>
        </font-resolution>
	</text>
	
	<animation>
		<object-name>THR arm</object-name>
		<type>select</type>
		<condition>
			<equals>
				<property>it-autoflight/mode/thr</property>
				<value>PITCH</value>
			</equals>
		</condition>
	</animation>
	
	<animation>
		<object-name>LOC arm</object-name>
		<type>select</type>
		<condition>
			<equals>
				<property>it-autoflight/output/loc-armed</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>
	
	<animation>
		<object-name>G/S arm</object-name>
		<type>select</type>
		<condition>
			<equals>
				<property>it-autoflight/output/appr-armed</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>
	
	<animation>
		<object-name>ALT arm</object-name>
		<type>select</type>
		<condition>
			<and>
			<equals>
				<property>it-autoflight/output/appr-armed</property>
				<value>0</value>
			</equals>
			<or>
			<equals>
				<property>it-autoflight/output/vert</property>
				<value>1</value>
			</equals>
			<equals>
				<property>it-autoflight/output/vert</property>
				<value>4</value>
			</equals>
			<equals>
				<property>it-autoflight/output/vert</property>
				<value>5</value>
			</equals>
			<equals>
				<property>it-autoflight/output/vert</property>
				<value>7</value>
			</equals>
			</or>
			</and>
		</condition>
	</animation>
	
	<animation>
		<object-name>TLATH arm</object-name>
		<type>select</type>
		<condition>
			<equals>
				<property>it-autoflight/mode/lat</property>
				<value>T/O</value>
			</equals>
			<equals>
				<property>it-autoflight/output/lnav-arm</property>
				<value>0</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<object-name>TLATL arm</object-name>
		<type>select</type>
		<condition>
			<equals>
				<property>it-autoflight/mode/lat</property>
				<value>T/O</value>
			</equals>
			<equals>
				<property>it-autoflight/output/lnav-arm</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>
	
	<animation>
		<object-name>FLARE arm</object-name>
		<type>select</type>
		<condition>
			<and>
				<equals>
					<property>it-autoflight/output/vert</property>
					<value>6</value>
				</equals>
				<equals>
					<property>it-autoflight/mode/vert</property>
					<value>G/S</value>
				</equals>
			</and>
		</condition>
	</animation>
	
	<!-- Green -->
    <animation>
        <type>material</type>
        <object-name>THRUST</object-name>
        <object-name>TPITCH</object-name>
        <object-name>RETARD</object-name>
        <object-name>ROLL</object-name>
        <object-name>PITCH</object-name>
        <emission>
            <red>0</red>
            <green>0.8</green>
            <blue>0.3</blue>
        </emission>
        <ambient>
            <red>0</red>
            <green>0</green>
            <blue>0</blue>
        </ambient>
        <diffuse>
            <red>0</red>
            <green>0</green>
            <blue>0</blue>
        </diffuse>
        <specular>
            <red>0</red>
            <green>0</green>
            <blue>0</blue>
        </specular>
    </animation>
	
	<!-- White -->
    <animation>
        <type>material</type>
        <object-name>AP</object-name>
        <object-name>AT</object-name>
        <emission>
            <red>1.0</red>
            <green>1.0</green>
            <blue>1.0</blue>
        </emission>
        <ambient>
            <red>0</red>
            <green>0</green>
            <blue>0</blue>
        </ambient>
        <diffuse>
            <red>0</red>
            <green>0</green>
            <blue>0</blue>
        </diffuse>
        <specular>
            <red>0</red>
            <green>0</green>
            <blue>0</blue>
        </specular>
    </animation>
	
	<!-- Grey -->
    <animation>
        <type>material</type>
        <object-name>THR arm</object-name>
        <object-name>LOC arm</object-name>
        <object-name>G/S arm</object-name>
        <object-name>ALT arm</object-name>
        <object-name>TLATH arm</object-name>
        <object-name>TLATL arm</object-name>
        <object-name>FLARE arm</object-name>
        <emission>
            <red>0.7</red>
            <green>0.7</green>
            <blue>0.7</blue>
        </emission>
        <ambient>
            <red>0</red>
            <green>0</green>
            <blue>0</blue>
        </ambient>
        <diffuse>
            <red>0</red>
            <green>0</green>
            <blue>0</blue>
        </diffuse>
        <specular>
            <red>0</red>
            <green>0</green>
            <blue>0</blue>
        </specular>
    </animation>

</PropertyList>
